<div class = "notice"><%= flash[:notice] %></div>
<h1>Books</h1>
   <table>
     <thead>
       <tr>
         <th>Title</th>
         <th>Body</th>
       </tr>
     </thead>

    <tbody>
               <% @books.each do |book| %>
        <tr>
           <td><%= book.title %></td>
           <td><%= book.body %></td>
           <td><%= link_to 'show', "/books/#{book.id}" %></td>
           <td><%= link_to 'Edit', "/books/#{book.id}/edit" %></td>
           <td><%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
               <% end %>
        </tr>
    </tbody>
   </table>

           <h2>New Book</h2>

           <% if @book.errors.any? %>
           <p>error occurs!</p>
           <ul>
           <% @book.errors.full_messages.each do |message| %>
           <li><%= message %></li>
           <% end %>
           </ul>
           <% end %>

           <div>
           <%= form_with model: @book do |f| %>
           <div class="field">
           <label>Title</label><br>
           <%= f.text_field :title %>
           </div>

           <div class="area">
           <label>Body</label><br>
           <%= f.text_area :body %>
          </div>

          <div class= "create">
            <%= f.submit 'Create Book' %>
          </div>
           <% end %>