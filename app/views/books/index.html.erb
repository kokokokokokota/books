<body>
  <h1>Books</h1>
   <table>

    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>

   <tbody>
           <% @books.each do |book| %>
    <tr>
           <td><%= book.title %></td>
           <td><%= book.body %></td>
           <td><%= link_to 'show', "/books" %></td>
           <td><%= link_to 'Edit', "/books" %></td>
           <td><%= link_to 'Destroy', "/books" %></td>
           <% end %>
     </tr>
   </tbody>

   </table>


   <h2>New Book</h2>

  <%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Create Book' %>
<% end %>
</body>